{
    "extends": [
        "config:recommended",
        ":disableDependencyDashboard"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": true,
            "automerge": true,
            "automergeType": "pr",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "prCreation": "immediate",
            "bumpVersion": "minor",
            "ignoreTests": true
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": true,
            "matchUpdateTypes": [
                "major"
            ],
            "prCreation": "immediate",
            "groupName": "Major Updates",
            "ignoreTests": true
        },
        {
            "matchManagers": [
                "helmv3"
            ],
            "enabled": true,
            "commitMessageSuffix": "[Update Chart version]",
            "bumpVersion": "minor",
            "prCreation": "immediate",
            "automerge": true,
            "automergeType": "pr",
            "ignoreTests": true
        }
    ]
}