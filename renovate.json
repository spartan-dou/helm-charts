{
    "extends": ["config:recommended", ":disableDependencyDashboard"],
    "packageRules": [
      {
        "matchManagers": ["helm-values"],
        "matchDatasources": ["docker"],
        "enabled": true,
        "automerge": true,
        "automergeType": "branch",
        "matchUpdateTypes": ["patch"],
        "prCreation": "immediate",
        "bumpVersion": "patch",
        "groupName": "Patch Updates",
        "ignoreTests": true
      },
      {
        "matchManagers": ["helm-values"],
        "matchDatasources": ["docker"],
        "enabled": true,
        "automerge": false,
        "matchUpdateTypes": ["minor", "major"],
        "prCreation": "immediate",
        "groupName": "Minor and Major Updates",
        "ignoreTests": true
      },
      {
        "matchManagers": ["helmv3"],
        "enabled": true,
        "commitMessageSuffix": "[Update Chart version]",
        "bumpVersion": "minor",
        "prCreation": "immediate",
        "automerge": false,
        "ignoreTests": true
      },
      {
        "matchFileNames": ["Chart.yaml"],
        "enabled": true,
        "versioning": "semver",
        "commitMessageSuffix": "chore(deps): update Chart.yaml versions"
      }
    ]
  }