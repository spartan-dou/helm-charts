{
    "extends": [
        "config:recommended",
        ":disableDependencyDashboard"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "groupName": "Docker Image Updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "enabled": true,
            "prCreation": "immediate",
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "at any time"
            ],
            "matchPackageNames": [
                "/.*/"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "groupName": "Docker Image Updates",
            "matchUpdateTypes": [
                "major"
            ],
            "enabled": true,
            "prCreation": "immediate",
            "schedule": [
                "at any time"
            ],
            "matchPackageNames": [
                "/.*/"
            ]
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": true,
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "prCreation": "immediate",
            "bumpVersion": "minor"
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": true,
            "matchUpdateTypes": [
                "major"
            ],
            "prCreation": "immediate",
            "groupName": "Major Updates"
        },
        {
            "matchManagers": [
                "helm"
            ],
            "enabled": true,
            "commitMessageSuffix": "[Update Chart version]",
            "bumpVersion": "minor",
            "prCreation": "immediate",
            "automerge": true,
            "automergeType": "branch"
        }
    ]
}