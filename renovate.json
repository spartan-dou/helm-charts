{
    "extends": [
      "config:recommended",
      ":disableDependencyDashboard"
    ],
    "packageRules": [
      {
        "matchManagers": ["helm-values"],
        "matchDatasources": ["docker"],
        "enabled": true,
        "automerge": true,
        "automergeType": "branch",
        "matchUpdateTypes": ["patch"],
        "prCreation": "immediate",
        "bumpVersion": "patch",
        "groupName": "Patch Updates",
        "ignoreTests": true
      },
      {
        "matchManagers": ["helm-values"],
        "matchDatasources": ["docker"],
        "enabled": true,
        "matchUpdateTypes": ["minor", "major"],
        "prCreation": "immediate",
        "groupName": "Minor and Major Updates",
        "ignoreTests": true
      },
      {
        "matchManagers": ["helmv3", "helm-values"],
        "enabled": true,
        "commitMessageSuffix": "[Update Chart version]",
        "bumpVersion": "minor",
        "prCreation": "immediate",
        "automerge": true,
        "automergeType": "pr",
        "ignoreTests": true
      },
      {
        "matchPaths": ["Chart.yaml"],
        "enabled": true,
        "bumpVersion": "minor",
        "versioning": "semver",
        "fileMatch": ["^(?:appVersion|version)"]
      }
    ]
  }
  